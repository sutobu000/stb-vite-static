- var DOMAIN = "/";
- var BASE_DOMAIN = "/";
- var DIR_ASSETS = BASE_DOMAIN + "assets/";
- var DIR_IMG = DIR_ASSETS + "img/";
- var DIR_IMG_CMN = DIR_ASSETS + "img/common/"; // イメージへのリンク
- var DIR_CSS = DIR_ASSETS + "css/";
- var DIR_JS = DIR_ASSETS + "js/";
block vars
doctype html
html(lang='ja')
  head
    meta(charset='utf-8')
    title #{_title_str}
    //- // Page Setting
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content=_desc_str)
    meta(name='keywords', content=_keys_str)
    //- // OG
    meta(property="og:title", content="#{_title_str}")
    //- meta(property="og:type", content="website")
    meta(property="og:type", content="article")
    meta(property="og:description", content=_desc_str)
    meta(property="og:url", content=DOMAIN)
    meta(property="og:image", content=DIR_IMG_CMN + "og_image.jpg")
    meta(name="twitter:card", content="summary_large_image")
    meta(name="twitter:site", content="@")
    // ViewPort Setting
    meta(name='viewport', content='width=device-width, initial-scale=1.0", user-scalable=yes')
    //- meta(name='viewport', content='width=device-width,initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=yes')
    //- // Add to homescreen for Chrome on Android
    meta(name='mobile-web-app-capable', content='yes')
    //- // iOS Icon Setting
    link(rel='apple-touch-icon', href=DIR_IMG_CMN + "apple-touch-icon.png")
    //- // GEneric icon
    link(rel='shortcut icon', href='/favicon.ico')
    //- // CSS Setting
    link(rel='stylesheet', href=DIR_CSS + "master.css")

    block link

  body(id=_page_id)
    .wrapper
      header.header

      main.main
        .container
          block body

      footer.footer

  //- 全体共通のjs
  block script
